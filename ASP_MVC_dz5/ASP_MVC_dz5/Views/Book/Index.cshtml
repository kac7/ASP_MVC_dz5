@using ASP_MVC_dz5.Models
@using ASP_MVC_dz5.App_Code;
@{
    //Layout = null;
}

<h2>Book</h2>
@if (BookRepository.Instanse._books.Count > 0)
{
    @Html.GenerateCustomTable(BookRepository.Instanse._books, book => { return $"{Html.ActionLink("Edit", "Edit", new { id = book.Id }, new { @class = "btn btn-success" })}{Html.ActionLink("Delete", "Delete", new { id = book.Id }, new { @class = "btn btn-danger" })}"; })
    <div class="footer-table">
        @Html.ActionLink("Add", "Create", new { }, new { @class = "btn btn-success" })
    </div>
}
else
{
    <h3 class="empty-table">No records. <a href="/Book/Create" class="first-records">Add First Book</a></h3>
}

