@using ASP_MVC_dz5.Models;
@model Role
@{
    //Layout = null;
}

<div class="main-form">
        <h2>Edit User @ViewBag.newRole.Name</h2>
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <div class="form-group row">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name", @Value = $"{@ViewBag.newRole.Name}" } }) 
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12 footer-form">
                        <input type="submit" class="btn btn-success" value="Edit" />
                        @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
