@using ASP_MVC_dz5.Models;
@using ASP_MVC_dz5.App_Code;
@{
    //Layout = null;
}
<h2>Roles</h2>
@if (RoleRepository.Instanse._role.Count > 0)
{
    @Html.GenerateCustomTable(RoleRepository.Instanse._role, role => { return $"{Html.ActionLink("Edit", "Edit", new { id = role.Id }, new { @class = "btn btn-success" })}{Html.ActionLink("Delete", "Delete", new { id = role.Id }, new { @class = "btn btn-danger" })}"; })

    <div class="footer-table">
        @Html.ActionLink("Add", "Create", new { }, new { @class = "btn btn-success" })
    </div>
}
else
{
    <h3 class="empty-table">No records. <a href="/Role/Create" class="first-records">Add First Role</a></h3>
}